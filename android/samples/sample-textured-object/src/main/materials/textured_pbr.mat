// Textured material

material {
    name : textured_pbr,
    shadingModel : lit,
    parameters : [
        {
            type : float3,
            name : emissiveFactor
        },
        // Base color sRGB texture
        {
            type : sampler2d,
            name : baseColor
        }
    ],
    // To sample textures our material must declare that it requires
    // a set of UV coordinates from the rendered mesh
    requires: [
        uv0
    ]
}

fragment {
    void material(inout MaterialInputs material) {

        prepareMaterial(material);

        material.baseColor = vec4(0.0, 0.0, 0.0, 1.0);

        material.emissive = vec4(materialParams.emissiveFactor.rgb, 0.0);
        material.emissive.rgb *= texture(materialParams_baseColor, getUV0()).rgb;

    }
}
